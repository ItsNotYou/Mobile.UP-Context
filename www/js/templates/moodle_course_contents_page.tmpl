    <div data-role="header" data-position="fixed" data-tap-toggle="false">
      <a href="#nav-panel" data-role="button" data-icon="false"
        data-inline="true" class="menubutton">Menue</a> <a
        href="#study/moodle" data-role="button" data-icon="false"
        data-inline="true" data-transition="slidefade"
        data-direction="reverse" class="back backbutton">Back</a>
      <h1>Kurs <%= course.get('shortname') %> <a href="#options" class="settings" data-role="button" data-icon="gear"></a></h1>
    </div> <!-- End Header -->

    <div data-role="content" data-theme="c">
      <div id="<%= course.get('id') %>">

      <h2><%= course.get('fullname') %></h2>

      <p><strong>Eingeschrieben:</strong> <%= course.get('enrolledusercount') %></p>

      <ul data-role="listview" data-inset="true">
      <% contents.each(function(c){ %>
        <li data-role="collapsible" data-collapsed-icon="arrow-down"
  data-expanded-icon="arrow-up" data-iconpos="right">
          <h3><%= c.get('name') %></h3>

          <% if ( c.has('modules') && ! _.isEmpty( c.get('modules') ) ) { %>
            <ul>
              <% _.each(c.get('modules'), function(m){ %>
                <li>
                  <a href="<%= m.url %> ">
                    <img src="<%= m.modicon %>" alt="<%= m.modname %>" />
                    <%= m.name %>
                  </a>
                </li>
              <% }); %>
            </ul>
          <% } else { %>
            <em>bisher keine Module</em>
          <% } %>


          <p>
            <%= c.get('summary') %>
          </p>

        </li>
      <% }); %>
      </ul>
    </div>
    </div>
    <!-- End Content -->