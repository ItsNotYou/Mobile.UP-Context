<h2>Results</h2>
<ul class="booklist" data-role="listview" data-inset="true">
    <% _.each(booklist, function(book) { %>
    <li class="book-short" id="<%= book.get('recordId') %>">
        <a href="#">
          <%= (book.get('title')) ? '<h2>'+book.get('title')+'</h2>' : ''%>
          <%= (book.get('subtitle')) ? '<p>'+book.get('subtitle')+'</p>' : ''%>
          <%= (book.get('authors')) ? '<p>'+book.get('authors')+'</p>' : ''%>
          <p><%= (book.get('publisher')) ? book.get('publisher') : '' %><% (book.get('dateIssued')) ? ','+book.get('dateIssued') : '' %></p>
        </a>
    </li>
    <% }); %>
</ul>
<a href="#loadNext" data-role="button" class="pagination-button">Mehr Ergebnisse laden</a>