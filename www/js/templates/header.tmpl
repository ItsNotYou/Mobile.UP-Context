  <% if(store.get('up.session.authenticated')){ %>
	<h1 class="ui-title loggedin"><%= (metas.title) ? metas.title : '' %></h1>
	<a href="#options/logout" class="settings ui-btn-right ui-btn" data-role="button" data-icon="false" title="logout" alt="logout">Logout</a>
  <%  } else { %>
    <h1 class="ui-title"><%=title%></h1>
  <% } %>
  <% if(metas.settingsUrl) { %>
  	<a id="header-settings-btn" rel="" data-icon="star" data-role="button" class="settings ui-link ui-btn ui-icon-star ui-btn-icon-left ui-shadow ui-corner-all" href="<%=(metas.settingsUrl.indexOf('javascript') == -1 ? '#' : '')+metas.settingsUrl%>" role="button" title="settings" alt="settings"></a>
  <% } %>
</div>