<div class="ui-header ui-bar-inherit ui-header-fixed slidedown ui-page-theme-a<%= (metas.klass) ? ' '+ metas.klass : '' %>" data-position="fixed" data-tap-toggle="false">
  <% if(metas.back) { %>
  	<a data-rel="back" data-direction="reverse" data-transition="slidefade" class="ui-link back <%= (metas.backCaption)  ? 'back-caption ' : '' %>ui-btn-left ui-btn ui-btn-inline ui-shadow ui-corner-all" href="javascript:;" data-role="button" role="button"><%= (metas.backCaption) ? metas.backCaption : 'ZurÃ¼ck' %></a>
  <% } else if(!metas.home){ %>
  <a href="#main/menu" data-role="button" data-icon="false" data-inline="true" data-transition="slidefade" data-direction="reverse" class="ui-link ui-btn-left ui-btn ui-btn-inline ui-shadow ui-corner-all menubutton">Menue</a>
