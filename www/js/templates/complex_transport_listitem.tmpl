<li data-role="collapsible" data-collapsed-icon="arrow-down"
  data-expanded-icon="arrow-up" data-iconpos="right">

  <h3>
    <span>ab <%= connection.get('depTime') %> <%= connection.get('depStation') %></span> <br />
    <span>an <%= connection.get('arrTime') %> <%= connection.get('arrStation') %></span>
  </h3>

  <table data-role="table" data-mode="reflow"
    class="ui-responsive table-stripe ">
    <thead>
      <tr>
        <th></th>
        <th>Uhrzeit</th>
        <th>Bahnhof</th>
        <th>Gleis</th>
        <th>Nr.</th>
      </tr>
    </thead>
    <tbody>
      <% _.each(connection.get('sections'), function(section, i) { %>

        <% if (i > 0) { %>
          <tr>
            <th>Arrow down</th>
            <td>Feet</td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% } %>

        <tr>
          <th><span class="marker closed"></span></th>
          <td>ab <%= section.depTime %></td>
          <td><%= section.depStation %></td>
          <td><%= section.depPlatform %></td>
          <td><%= section.journey.name %></td>
        </tr>
        <tr>
          <th><span class="marker closed"></span></th>
          <td>an <%= section.arrTime %></td>
          <td><%= section.arrStation %></td>
          <td><%= section.arrPlatform %></td>
          <td></td>
        </tr>

      <%});%>

    </tbody>
  </table>
</li>