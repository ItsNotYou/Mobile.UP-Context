<div data-role="tabs">
    <div data-role="navbar">

        <ul class="grades-tabs">
            <% _.each(data.achievements.field, function(acm, index) { %>
            <li><a href="#<%= acm.id %>"
                    <% if (index === 0) { %>
                    class="ui-btn-active"
                    <% } %>
                ><%= acm.fieldName %></a></li>
            <% }); %>
        </ul>

        <% _.each(data.achievements.field, function(acm) { %>
        <div id="<%= acm.id %>" class="extra-space">
            <table class="grades-table extra-space">
                <thead>
                <tr>
                    <%
                    var ac = acm.credits.accountCredits;
                    %>
                    <th><%= ac.description %></th>
                    <th></th>
                    <th><%= ac.actualCreditPoints %>/<%= ac.targetCreditPoints %></th>
                </tr>
                </thead>
            </table>

            <table class="grades-table">
                <thead>
                    <tr>
                        <th>Bezeichnung</th>
                        <th>Note</th>
                        <th>LP</th>
                    </tr>
                </thead>
                <tbody>
                <% _.each(acm.module, function(module, index) { %>
                    <% var topLevelId = index % 2; %>
                    <% print(moduleTemplate({module: module, moduleTemplate: moduleTemplate, topLevelId: topLevelId})); %>
                <% }); %>
                </tbody>
                <tfoot>
                    <tr>
                        <%
                            var ac = acm.credits.accountCredits;
                        %>
                        <th><%= ac.description %></th>
                        <th></th>
                        <th><%= ac.actualCreditPoints %>/<%= ac.targetCreditPoints %></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <% }); %>

    </div>

    <style scoped>
        .extra-space {
            margin-top: 1em;
            margin-bottom: 1em;
        }

        .grades-table {
            border-collapse: collapse;
            width: 100%;
            background: #f2f2f2;
        }

        .grade,
        .lp {
            text-align: center;
        }
        .name {
            text-align: left;
        }

        .grades-table thead tr,
        .grades-table tfoot tr {
            color: white;
            background-color: #3a3a3a;
        }

        tr.module-pre td,
        tr.module-post td {
            padding-top: 5px;
        }

        tr.module-level-0 th:first-child {
            padding-left: 0;
        }

        tr.module-level-1 th:first-child {
            padding-left: 20px;
        }

        tr.module-level-2 th:first-child {
            padding-left: 40px;
        }

        tr.module-header th.grade,
        tr.module-header th.lp,
        tr.module-content td {
            background: rgba(255, 255, 255, 0.5);
            border: 1px solid #adadad;
        }
    </style>
</div>